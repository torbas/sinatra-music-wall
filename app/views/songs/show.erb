<div class="jumbotron"><h1><%= @song.title %></h1></div>
<a href="/" class="btn btn-default" role="button" >Home</a>
<hr />

<%= erb :'/errors' %>

<% unless check_review_exist(@song.id) %>
  <form method="post" action="/songs/review" role="form">
    <div class="form-group">
      <input type="hidden" name="song_id" value=<%= @song.id %>>
      <label for="content">Review:</label>
      <textarea name="content" rows="4" cols="50" class="form-control">
      </textarea>
    </div>
    <div>
      <input class="btn btn-primary" role="button"  type="submit" value="Submit">
    </div>

  </form>
<% end %>

<div class="list-group">
<% unless @reviews.nil? %>
  <% @reviews.each do |review| %>
    <div class="list-group-item">
      <div class="review username label label-info author"><%= review.user.username %></div>
      <hr />
      <div class="review"><%= review.content %></div>
    </div>
  <% end %>
<% end %>
</div>